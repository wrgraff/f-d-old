{% macro addWorksItem(name, img, address, link, categories) %}
    <li class="works__item">
        <h3 class="works__title"><a class="works__link" href="{{ link }}">{{ name }}</a></h3>
        <img class="works__img" src="/static/img/works/{{ img }}" alt="{{ name }}" aria-hidden="true">

        <h4 class="visually-hidden">Categories:</h4>
        <ul class="works__categories">
            {% for category in categories %}
                <li class="works__category works__category_{{ category }}">{{ category }}</li>
            {% endfor %}
        </ul>
        <p class="works__address">
            <svg width="40" height="10" class="works__chain">
                <path d="M23,0 L19,0 L19,1.9 L23,1.9 C24.71,1.9 26.1,3.29 26.1,5 C26.1,6.71 24.71,8.1 23,8.1 L19,8.1 L19,10 L23,10 C25.76,10 28,7.76 28,5 C28,2.24 25.76,0 23,0 Z" id="chain_right"></path>
                <path d="M9.9,5 C9.9,3.29 11.29,1.9 13,1.9 L17,1.9 L17,0 L13,0 C10.24,0 8,2.24 8,5 C8,7.76 10.24,10 13,10 L17,10 L17,8.1 L13,8.1 C11.29,8.1 9.9,6.71 9.9,5 Z" id="chain_left"></path>
                <polygon points="14 6 22 6 22 4 14 4" id="chain_center"></polygon>
            </svg>

            <span class="works__address-text">{{ address }}</span>
        </p>
    </li>
{% endmacro %}

<ul class="works">
    {% for item in worksItems %}
        {{ addWorksItem(item.name, item.img, item.address, item.link, item.categories) }}
    {% endfor %}
</ul>
